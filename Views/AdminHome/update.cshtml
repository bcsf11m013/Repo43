@model myZone.Models.product
@{
    Layout = "~/Views/Shared/_HeaderFooter.cshtml";
}
 <nav class="nav navbar-default col-md-12 logo " role="navigation" style="background-color:#252a2f">
        <div class="navbar-header ">
            <h3 class="active" style="padding-left:20px ;color:goldenrod"> Admin Panel </h3>
        </div>
        <div>
      <ul class="nav navbar-nav pull-right">
        <li>@Html.ActionLink("Add Item", "addItem","AdminHome")</li>
        <li>@Html.ActionLink("View All Items", "ViewAll","AdminHome")</li>                
      

      </ul>
       </div>
    </nav>
<div>
    <br />
                  
    <div class="panel panel-smart" style="margin-left:60px;margin-right:60px">
							<div class="panel-heading">
								<h3 class="panel-title text-center" style="font-size:40px">Update Product</h3>
							</div>
							<div class="panel-body text-center center-block">
							<!-- Registration Form Starts -->
								<form class="form-horizontal" style="margin-left:100px" action="/AdminHome/updateconfirm/@Model.Id" method="post">
								<!-- Personal Information Starts -->
									
                                     <div class="form-group">
										<label for="inputLname" class="col-sm-3 control-label">Product title :</label>
										<div class="col-sm-3">
											<input type="text" class="form-control" name="title" value="@Model.title" >
										</div>
									</div>
                                    <div class="form-group">
										<label for="inputLname" class="col-sm-3 control-label">Category :</label>
										<div class="col-sm-3">
                                            <select class="control-label col-md-6" name="category">
                                                 <option class="form-control" value="@Model.category.name">@Model.category.name</option>
								                 <option class="form-control" value="Casual">Casual</option>
                                                 <option class="form-control" value="Formal">Formal</option>
                                                  <option class="form-control" value="Bridal">Bridal</option>
                                                <option class="form-control" value="Accessories">Accessories</option>
							                </select>
										</div>
									</div>
                                    <div class="form-group">
										<label for="inputFax" class="col-sm-3 control-label">Sub-category:</label>
										<div class="col-sm-3">
                                             <select class="control-label col-md-6" name="sub_category">
                                                  <option class="form-control" value="@Model.Brand.name">@Model.Brand.name</option>
								                 <option class="form-control" value="Hsy">Hsy</option>
                                                 <option class="form-control" value="Mariab">Mariab</option>
                                                  <option class="form-control" value="Ego">Ego</option>
                                                <option class="form-control" value="Labels">Labels</option>
                                                <option class="form-control" value="rings">rings</option>
                                                 <option class="form-control" value="earrings">earrings</option>


							                </select>

										</div>
									</div>
                                    <div class="form-group">
										<label for="inputLname" class="col-sm-3 control-label">Price :</label>
										<div class="col-sm-3">
											<input type="text" class="form-control" name="price" value="@Model.price" >
										</div>
									</div>
									
								
                                     <div class="form-group">
										<label for="inputFax" class="col-sm-3 control-label">Image :</label>
                                    
										<div class=" row col-sm-9">
                                            <div class="col-sm-6">
											     <input type="text" class="form-control" id="Text2" />
                                             </div>
                                            <div class="col-md-3 ">
                                              
                                                  <button type="submit" class="btn btn-warning">Upload</button>
                                             </div>
										</div>
                                     </div>
                                     <div class="col-md-6" style="margin-left:150px">
									<input type="submit" class="btn btn-warning" value="update" />
                                </div>
                                     
                                    </form>

                                <br />
                                <br />
                                    <br />
                                    <br />
                                    <br />
                               
                            </div>
                            </div>
           </div>
            